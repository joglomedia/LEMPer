    include /etc/nginx/vhost/site_default.conf;

    # Nginx basic status monitoring.
    location = /nginx_status {
        stub_status;
        allow all;
        auth_basic "Denied";
        auth_basic_user_file /srv/.htpasswd;
        access_log off;
        log_not_found off;
    }

    # PHP-FPM status monitoring.
    location ~ ^/php-fpm_(status|ping)$ {
        include /etc/nginx/fastcgi_params;
        fastcgi_pass unix:/run/php/php8.3-fpm.sock;
        fastcgi_param SCRIPT_FILENAME $fastcgi_script_name;
        allow all;
        auth_basic "Denied";
        auth_basic_user_file /srv/.htpasswd;
        access_log off;
        log_not_found off;
    }

    # Default PHP handler (PHP 8.3)
    location ~ \.php$ {
        set $php_version "8.3";
        include /etc/nginx/includes/php_handler.conf;
    }

    # PHP version-specific handlers using reusable template
    location ~ \.php84$ {
        set $php_version "8.4";
        include /etc/nginx/includes/php_handler.conf;
    }

    location ~ \.php83$ {
        set $php_version "8.3";
        include /etc/nginx/includes/php_handler.conf;
    }

    location ~ \.php82$ {
        set $php_version "8.2";
        include /etc/nginx/includes/php_handler.conf;
    }

    location ~ \.php81$ {
        set $php_version "8.1";
        include /etc/nginx/includes/php_handler.conf;
    }

    location ~ \.php80$ {
        set $php_version "8.0";
        include /etc/nginx/includes/php_handler.conf;
    }

    location ~ \.php74$ {
        set $php_version "7.4";
